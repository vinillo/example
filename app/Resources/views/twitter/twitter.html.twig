{% extends 'base.html.twig' %}
{% block title %}Twitter Appie{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/main.min.css') }}">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
{% endblock %}
{% block body %}
    <div id="container">
        <div class="container_space">
            <h1>Twitter APP</h1>
            <ul class="breadcrumbs">
                <li><a href="">Home</a></li>
                <li>/</li>
                <li>Twitter</li>
            </ul>
            <div class="clearfix"></div>
            <h2>Twitter Newsfeed:</h2>
            <div id="post_container">
                <ul>
                    {% for p in data_twitter %}
                        <li>#twitter uit `twitter_posts` table values hier: {{ p.title }} - id: {{ p.id }} -
                            created: {{ p.created }} - last_edit: {{ p.lastedit }} -
                            post_content: {{ p.postcontent }} </li>
                    {% endfor %}
                </ul>
            </div>
            <h2>Post je eigen twitter bericht!</h2>


                <ul>
                    <li>
                        {% block form_widget_simple %}
                        {{ form_start(twitter_form) }}
                        {{ form_errors(twitter_form.title) }}
                        {{ form_widget(twitter_form.title) }}
                    </li>
                    <li>
                        {{ form_errors(twitter_form.postcontent) }}
                        {{ form_widget(twitter_form.postcontent) }}
                    </li>
                    <li>
                        {{ form_widget(twitter_form.Postit) }}
                    </li>
                    {{ form_end(twitter_form) }}
                    {% endblock form_widget_simple %}
                </ul>

            <span id="credit">&copy; copyright {{ current_year }} twitter app - a simple sf2 web appie - <a href="{{ asset('/login') }}""">inloggen</a> - <a href="{{ asset('/register') }}">registeren</a></span>
        </div>
    </div>
{% endblock %}



